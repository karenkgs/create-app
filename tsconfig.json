{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "test"
    ],
    "target": "es6",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}